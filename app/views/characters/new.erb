<div class="page-content">
<div class="char-stats-div">
<form action='/users/<%=current_user.id%>/characters' method="POST">
  <table>
    <tr>
      <th><label for="new-char-name">Name: </label></th>
      <td><input type="text" class="handwritten" id="new-char-name" name="character[name]"></td>
    </tr> 
    <tr>
      <th><label for="new-char-class">Class: </label></th>
      <td><select class="handwritten" id="new-char-class" name="character[character_class]">
        <option></option>
        <option value="Barbarian">Barbarian</option>
        <option value="Bard">Bard</option>
        <option value="Cleric">Cleric</option>
        <option value="Druid">Druid</option>
        <option value="Fighter">Fighter</option>
        <option value="Monk">Monk</option>
        <option value="Paladin">Paladin</option>
        <option value="Ranger">Ranger</option>
        <option value="Rogue">Rogue</option>
        <option value="Sorcerer">Sorcerer</option>
        <option value="Warlock">Warlock</option>
        <option value="Wizard">Wizard</option>
      </select></td>
    </tr>
    <tr>
      <th><label for="new-char-race">Race: </label></th>
      <td><select class="handwritten" id="new-char-race" name="character[race]">
      <option></option>
      <option value="Dragonborn">Dragonborn</option>
      <option value="Dwarf">Dwarf</option>
      <option value="Elf">Elf</option>
      <option value="Gnome">Gnome</option>
      <option value="Half-Elf">Half-Elf</option>
      <option value="Half-Orc">Half-Orc</option>
      <option value="Halfling">Halfling</option>
      <option value="Human">Human</option>
      <option value="Tiefling">Tiefling</option>
    </select></td>
    </tr>
    <tr>
      <th><label for="new-char-alignment">Alignment: </label></th>
      <td><select class="handwritten" id="new-char-alignment" name='character[alignment]'>
      <option></option>
      <option value="Lawful Good">Lawful Good</option>
      <option value="Neutral Good">Neutral Good</option>
      <option value="Chaotic Good">Chaotic Good</option>
      <option value="Lawful Neutral">Lawful Neutral</option>
      <option value="(True) Neutral">(True) Neutral</option>
      <option value="Chaotic Neutral">Chaotic Neutral</option>
      <option value="Lawful Evil">Lawful Evil</option>
      <option value="Neutral Evil">Neutral Evil</option>
      <option value="Chaotic Evil">Chaotic Evil</option>
    </select></td>
    </tr>
    <tr>
      <th><label for="new-char-lvl">Level: </label></th>
      <td><input type="integer" id="new-char-lvl" class="new-char-stat handwritten" maxlength=3 value = "1" name="character[level]"></td>
    </tr> 
    <tr>
      <th><label for="new-char-str">Strength: </label></th>
      <td><input type="integer" id="new-char-str" class="new-char-stat handwritten" maxlength=3 value = "<%=@stat_roll1%>" name="character[strength]"><span class="stat-bonus" id="Strength">&nbsp;&nbsp;&nbsp;</span></td>
    </tr> 
    <tr>
      <th><label for="new-char-dex">Dexterity: </label></th>
      <td><input type="integer" id="new-char-dex" class="new-char-stat handwritten" maxlength=3 value = "<%=@stat_roll2%>" name="character[dexterity]"><span class="stat-bonus" id="Dexterity">&nbsp;&nbsp;&nbsp;</span></td>
    </tr> 
    <tr>
      <th><label for="new-char-con">Constitution: </label></th>
      <td><input type="integer" id="new-char-con" class="new-char-stat handwritten" maxlength=3 value = "<%=@stat_roll3%>" name="character[constitution]"><span class="stat-bonus" id="Constitution">&nbsp;&nbsp;&nbsp;</span></td>
    </tr> 
    <tr>
      <th><label for="new-char-int">Intelligence: </label></th>
      <td><input type="integer" id="new-char-int" class="new-char-stat handwritten" maxlength=3 value = "<%=@stat_roll4%>" name="character[intelligence]"><span class="stat-bonus" id="Intelligence">&nbsp;&nbsp;&nbsp;</span></td>
    </tr> 
    <tr>
      <th><label for="new-char-wis">Wisdom: </label></th>
      <td><input type="integer" id="new-char-wis" class="new-char-stat handwritten" maxlength=3 value = "<%=@stat_roll5%>" name="character[wisdom]"><span class="stat-bonus" id="Wisdom">&nbsp;&nbsp;&nbsp;</span></td>
    </tr> 
    <tr>
      <th><label for="new-char-cha">Charisma: </label></th>
      <td><input type="integer" id="new-char-cha" class="new-char-stat handwritten" maxlength=3 value = "<%=@stat_roll6%>" name="character[charisma]"><span class="stat-bonus" id="Charisma">&nbsp;&nbsp;&nbsp;</span></td>
    </tr>
    <tr>
      <th><label for="new-char-background">Background: </label></th>
      <td>&nbsp;</td>
    </tr>
  </table>
  <br>
  <textarea class="handwritten" id="new-char-background" name="character[background]" placeholder="Your awesome background story here!"></textarea><br><br>
  <input type="submit" value="Create">
</form>
</div>
</div>
<%= erb :'characters/_char_img' %>